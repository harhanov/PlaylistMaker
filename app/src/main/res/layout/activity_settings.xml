<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/relative_layout_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/standard_margin"
        android:layout_marginTop="@dimen/standard_margin"
        android:layout_marginEnd="@dimen/end_margin">

        <ImageView
            android:id="@+id/exitSettings"
            android:layout_width="@dimen/image_layout_width"
            android:layout_height="@dimen/image_layout_width"
            android:layout_alignParentTop="true"
            android:layout_marginTop="6dp"
            android:background="@drawable/arrow_back"
            android:foreground="?attr/selectableItemBackground"
            android:iconTint="@color/black" />

        <TextView
            android:id="@+id/settingsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:paddingLeft="60dp"
            android:text="@string/settings"
            android:textAppearance="@style/title2"
            android:textStyle="bold"></TextView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/relative_layout_height"
        android:layout_marginStart="@dimen/standard_margin"
        android:layout_marginEnd="@dimen/end_margin">

        <TextView
            android:id="@+id/themeSelection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/dark_theme"
            android:textAppearance="@style/ys_regular_" />

        <Switch
            android:id="@+id/selectionSwitch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/relative_layout_height"
        android:layout_marginStart="@dimen/standard_margin"
        android:layout_marginEnd="@dimen/end_margin">

        <TextView
            android:id="@+id/sharing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/share_app"
            android:textAppearance="@style/ys_regular_" />

        <ImageView
            android:id="@+id/shareIcon"
            android:layout_width="@dimen/image_layout_width"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/share" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/relative_layout_height"
        android:layout_marginStart="@dimen/standard_margin"
        android:layout_marginEnd="@dimen/end_margin">

        <TextView
            android:id="@+id/writeSupport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/write_to_support"
            android:textAppearance="@style/ys_regular_" />

        <ImageView
            android:id="@+id/supportIcon"
            android:layout_width="@dimen/image_layout_width"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/support" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lists"
        android:layout_width="match_parent"
        android:layout_height="@dimen/relative_layout_height"
        android:layout_marginStart="@dimen/standard_margin"
        android:layout_marginEnd="@dimen/end_margin">

        <TextView
            android:id="@+id/ys_regular_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/terms_of_service"
            android:textAppearance="@style/ys_regular_" />

        <ImageView
            android:id="@+id/vector"
            android:layout_width="10dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_forward" />
    </RelativeLayout>

</LinearLayout>